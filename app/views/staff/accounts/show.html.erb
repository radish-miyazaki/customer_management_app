<% @title = "アカウント情報" %>
<h2 class="mt-4"><%= @title %></h2>

<div>
  <div class="text-right">
    <%= link_to "パスワード変更", :edit_staff_password, class: "btn btn-warning text-white" %>
    <%= link_to "編集", :edit_staff_account, class: "btn btn-info" %>
  </div>

  <table class="table table-striped my-3 table-hover">
    <tr>
      <th>氏名</th>
      <td>
        <%= @staff_member.family_name %>
        <%= @staff_member.given_name %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>
        <%= @staff_member.family_name_kana %>
        <%= @staff_member.given_name_kana %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @staff_member.email %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td>********************</td>
    </tr>
    <tr>
      <th>入社日</th>
      <td><%= @staff_member.start_date %></td>
    </tr>
  </table>

</div>