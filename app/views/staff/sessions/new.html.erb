<% @title = "ログイン" %>

<div class="card my-5">
  <h5 class="card-title pl-3 py-3 bg-dark text-white"><%= @title %></h5>

  <div class="card-body" id="login-form">
    <%= form_with model: @form, url: :staff_session do |f| %>
      <div class="form-group">
        <%=f.label :email, "メールアドレス", class: "form-text" %>
        <%=f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%=f.label :password, "パスワード", class: "form-text" %>
        <%=f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group pt-4">
        <%= f.submit "ログイン", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>